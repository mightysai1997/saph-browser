{
	"compilerOptions": {
		"target": "es2018",
		"module": "es6",
		"declaration": true,
		"outDir": "dist/",
		"strict": true,
		"sourceMap": true
	},
	"include": [
		"src/"
	],
	"exclude": [
		"node_modules/",
		"src/**/*.spec.ts"
	],
	"ts-node": {
		"compilerOptions": {
			"module": "commonjs",
			"esModuleInterop": true,
			"moduleResolution": "node"
		}
	}
}
